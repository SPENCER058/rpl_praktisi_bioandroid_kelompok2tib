<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_galih"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingLeft="-10dp"
            android:paddingRight="-10dp"
            android:src="@drawable/header_galih"></ImageView>

        <ImageButton
            android:id="@+id/backButtonGalih"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back_button_galih"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-120dp">

        <ImageView
            android:id="@+id/profilePictureGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_picture_galih" />

        <TextView
            android:id="@+id/headerFullNameGalih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilePictureGalih"
            android:fontFamily="@font/poppins"
            android:text="Galih Panji Hanindito"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/headerEmailGalih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerFullNameGalih"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="galihpanji058@gmail.com"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="60dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/titleProgramStudiGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:text="Program Studi"
            />

        <TextView
            android:id="@+id/bioProgramStudiGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:text="D3 Teknik Informatika"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/titleAlamatGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:text="Alamat"
            />

        <TextView
            android:id="@+id/bioAlamatGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:text="Boyolali, Jawa tengah, Indonesia"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/titleTempatLahirGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:text="Tempat Lahir"
            />

        <TextView
            android:id="@+id/bioTempatLahirGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:text="Kota Boyolali"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/titleTanggalLahirGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="10dp"
            android:text="Tanggal Lahir"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/bioTanggalLahirGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:text="16 Februari 2003"
            android:textColor="@color/white"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footerIconGalih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/githubIconGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/github_icon_galih"/>

        <ImageView
            android:id="@+id/linkedinIconGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/githubIconGalih"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/linkedin_icon_galih"/>

        <ImageView
            android:id="@+id/twitterIconGalih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/githubIconGalih"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/twitter_icon_galih"/>

    </RelativeLayout>

</LinearLayout>