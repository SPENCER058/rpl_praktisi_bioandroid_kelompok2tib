<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow_back" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/bg"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/img"/>

        <TextView
            android:layout_below="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/comic_neue_bold"
            android:text="Muhammad Arif Aldini"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:padding="20dp"
            android:layout_marginTop="210dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Alamat Email"
                android:fontFamily="@font/comic_neue_bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comic_neue_bold"
                android:text="aldiniart@gmail.com"
                android:textSize="23dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Prodi"
                android:fontFamily="@font/comic_neue_bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comic_neue_bold"
                android:text="D3 Tenik Informaika"
                android:textSize="23dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Alamat"
                android:fontFamily="@font/comic_neue_bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comic_neue_bold"
                android:text="Nusukan, Jawa tengah, Indonesia"
                android:textSize="23dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Tempat Lahir"
                android:fontFamily="@font/comic_neue_bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comic_neue_bold"
                android:text="Desa Karang Dadi"
                android:textSize="23dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Tanggal Lahir"
                android:fontFamily="@font/comic_neue_bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comic_neue_bold"
                android:text="29 Juli 2002"
                android:textSize="23dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/git"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/git"
                    android:layout_marginHorizontal="11dp"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>